= hidden_field_tag "commands[#{command.index}][id]", command.id
.field.span2
  = label_tag :starts_at
  = text_field_tag "commands[#{command.index}][starts_at]", datepicker_format(command.starts_at), :class=>"datepicker"
.field.span2
  = label_tag :ends_at
  = text_field_tag "commands[#{command.index}][ends_at]", datepicker_format(command.ends_at), :class=>"datepicker"
.field.span1
  = label_tag :command
  = select_tag "commands[#{command.index}][command]", options_for_select(event_commands(command.command))
.field.span2
.field.span1
  = render :partial => "controls", :locals => {:group => @group, :event => @event, :command_id => command.id}

:javascript
  $('#commands_#{command.index}_command').popover({
    animation: true,
    trigger: "hover",
    title: "Copy Command",
    content: "The copy command copies a single field from the raw data collection to the processed data collection with out any changes or processing."
  });
  
  $(function() {
    $( ".datepicker" ).datetimepicker({
        dateFormat: "yy-mm-dd",
        changeYear: true,
        changeMonth: true,
        showSecond: true,
        timeFormat: "hh:mm:ss",
        separator: " "});
  });     