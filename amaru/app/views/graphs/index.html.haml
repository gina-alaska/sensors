.row-fluid
  .span12
    .sensor-controls
      = link_to 'New Graph', new_group_graph_path(@group), class: "btn btn-primary"
    %h2 Listing Graphs
.row-fluid
  .span12
    %table.table.table-stripped.table-condenced
      %tr
        %th Name
        %th Image
        %th Controls
      - @graphs.each do |graph|
        %tr
          %td= graph.name
          %td
            = link_to image_platform_graph_path(@platform, graph), :class => "graph_link" do
              =image_tag thumb_platform_graph_path(@platform, graph)
          %td
            %table
              %tr
                %td= link_to 'Edit', edit_group_graph_path(@group, graph)
                %td= link_to 'Re-Build', build_group_graph_path(@group, graph), class: "btn btn-primary"
                %td= link_to 'Delete',[@group, graph], confirm: 'Are you sure?', method: :delete, class: "btn btn-danger delete"
%br/
