.sensor-controls
  -if current_user
    .login_text
      ="Welcome #{current_user.name}"
      =link_to "Log Out", signout_path, class: "btn btn-primary"
  -else
    .login_text
      =link_to "Log In", signin_path, class: "btn btn-primary"
.navbar
  .navbar-inner
    .container
      %ul.nav
        %li{:class => (current_page?(dashboard_path) ? "active" : "")}
          = link_to "Dashboard", dashboard_path
        -if current_user
          %li{:class => (current_page?(groups_path) ? "active" : "")}
            = link_to "Groups", groups_path
          %li{:class => (current_page?(platforms_path) ? "active" : "")}
            = link_to "Platforms", platforms_path
          %li{:class => (current_page?(tools_path) ? "active" : "")}
            = link_to "Grouping Tools", tools_path
