%table.table.table-striped.table-condensed
  %tr
    %th
      System
    %th
      Status
    %th
      Time
    %th
      Message
  - @status.each_with_index do |f, index|
    - break if index >= 6
    %tr
      %td= f["system"].upcase
      - case f["status"]
        - when "ALERT!"
          %td.alert-error
            =f["status"]
        - when "Error"
          %td.alert-error
            =f["status"]
        - when "Finished"
          %td.alert-good
            =f["status"]
        - when "Running"
          %td.alert-warn
            =f["status"]
        - else
          = f["status"]
      %td
        - unless f["status"] == "Finished"
          = "Started #{f["start_time"]}"
        - else
          = "Ended #{f["end_time"]}"
      %td= f["message"]
